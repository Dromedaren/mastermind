<Window x:Class="MastaMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="640">
        <DockPanel Height="auto" HorizontalAlignment="Stretch" Margin="10,10,0,0" Name="dockPanel1" VerticalAlignment="Top" Width="480">
            <StackPanel Height="500" Name="MenuPanel" Width="auto">
                <TextBlock Name="GameTitle" Margin="20,20,0,0" FontSize="40" FontFamily="Century Schoolbook" FontStretch="Normal">MastaMind</TextBlock>
                <TextBox Name="Menu" FontFamily="Book Antiqua" Width="200" Grid.Column="1" Margin="0,100,0,0" HorizontalAlignment="Center" FontSize="40" IsReadOnly="True" HorizontalContentAlignment="Center">Meny</TextBox>
                <Button Name="SpelareVsAI" Focusable="False" FontFamily="SketchFlow Print" FontSize="25" Height="40" Width="200" HorizontalAlignment="Center" Background="#FFF6ABB0" BorderBrush="AliceBlue" Click="SpelareVsAI_Click" Content="Spelare Vs AI"></Button>
            <Button Name="QuitGame" Focusable="False" FontFamily="SketchFlow Print" FontSize="25" Height="40" Width="200" HorizontalAlignment="Center" Background="#FFF6ABB0" BorderBrush="AliceBlue" Click="QuitMasterMind" Content="Avsluta"/>
            </StackPanel>
        </DockPanel>
</Window>
